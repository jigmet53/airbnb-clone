<%- include('../partials/head') %>
</head>
<body class="bg-gray-50 text-gray-800">
  <%- include('../partials/nav') %>

  <main class="container mx-auto bg-white shadow-2xl rounded-2xl p-8 mt-12 max-w-6xl">
    <!-- Title -->
    <h2 class="text-4xl md:text-5xl text-red-500 font-extrabold text-center mb-10 tracking-tight">
      <%= home.houseName %>
    </h2>

    <!-- Image + Info -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
      <!-- Image Section -->
      <div class="relative group overflow-hidden rounded-xl shadow-lg">
        <img 
          src="<%= home.photo %>" 
          alt="<%= home.houseName %>" 
          class="w-full h-96 object-cover transform transition-transform duration-500 group-hover:scale-105"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex items-end justify-center">
          <p class="text-white font-semibold text-lg pb-4">Beautiful stay in <%= home.location %></p>
        </div>
      </div>

      <!-- Details Section -->
      <div class="space-y-6 text-gray-700">
        <!-- Description -->
        <div class="border-b pb-4">
          <h3 class="text-2xl font-semibold text-gray-900 mb-2 flex items-center gap-2">
            <i class="fa-solid fa-circle-info text-red-500"></i> Description
          </h3>
          <p class="leading-relaxed text-gray-600"><%= home.description %></p>
        </div>

        <!-- Location -->
        <div class="border-b pb-4">
          <h3 class="text-2xl font-semibold text-gray-900 mb-2 flex items-center gap-2">
            <i class="fa-solid fa-location-dot text-red-500"></i> Location
          </h3>
          <p class="text-gray-600"><%= home.location %></p>
        </div>

        <!-- Price -->
        <div class="border-b pb-4">
          <h3 class="text-2xl font-semibold text-gray-900 mb-2 flex items-center gap-2">
            <i class="fa-solid fa-tag text-red-500"></i> Price
          </h3>
          <p class="text-green-600 text-2xl font-bold">$<%= home.price %> <span class="text-sm text-gray-500">/ night</span></p>
        </div>

        <!-- Rating -->
        <div class="border-b pb-4">
          <h3 class="text-2xl font-semibold text-gray-900 mb-2 flex items-center gap-2">
            <i class="fa-solid fa-star text-yellow-400"></i> Rating
          </h3>
          <div class="flex items-center gap-2">
            <span class="text-yellow-400 text-2xl">★</span>
            <span class="text-lg font-medium"><%= home.rating %> / 5</span>
          </div>
        </div>

        <!-- Rules / PDF download -->
        <% if (home.PDF) { %>
  <div class="border-b pb-4">
    <h3 class="text-2xl font-semibold text-gray-900 mb-2 flex items-center gap-2">
      <i class="fa-solid fa-file-pdf text-red-500"></i> House Rules
    </h3>
    <a href="/<%= home.PDF %>" 
       download 
       class="inline-block px-4 py-2 text-red-600 border border-red-500 rounded-md hover:bg-red-500 hover:text-white transition">
      Download Rules (PDF)
    </a>
  </div>
<% } %>

        <!-- Favourite button -->
        <div class="pt-4">
          <%- include('../partials/favourite') %>
        </div>
      </div>
    </div>
  </main>

  <footer class="mt-12 py-8 text-center text-gray-500 text-sm">
    © <%= new Date().getFullYear() %> Airbnb Clone by Jigmet & Team
  </footer>

  <!-- Optional: Font Awesome for icons -->
  <script src="https://kit.fontawesome.com/a2e0a6e6b3.js" crossorigin="anonymous"></script>
</body>
</html>
