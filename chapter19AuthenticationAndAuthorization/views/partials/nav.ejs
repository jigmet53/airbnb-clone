<header class="bg-red-500/90 backdrop-blur-md text-white shadow-md sticky top-0 z-50">
  <nav class="container mx-auto flex justify-between items-center px-4 py-3">
    <!-- Logo / Brand -->
    <a href="/" class="text-2xl font-bold tracking-wide hover:text-gray-100 transition">
      Airbnb<span class="text-gray-200 font-light">Clone</span>
    </a>

    <!-- Hamburger Menu (Mobile) -->
    <button
      id="menu-btn"
      class="block md:hidden focus:outline-none focus:ring-2 focus:ring-white rounded"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        ></path>
      </svg>
    </button>

    <!-- Navigation Links -->
    <ul
      id="menu"
      class="hidden md:flex md:space-x-4 flex-col md:flex-row absolute md:static bg-red-500 md:bg-transparent left-0 top-16 w-full md:w-auto shadow-md md:shadow-none"
    >
      <li>
        <a
          href="/"
          class="<%= currentPage === 'index' ? 'bg-red-600' : 'hover:bg-red-400/60' %> py-2 px-4 rounded-md transition duration-300 block text-center md:text-left"
        >Home</a>
      </li>

      <% if (isLoggedIn) { %>
      <% if (user && user.usertype==='guest') { %>

        <li>
          <a
            href="/home"
            class="<%= currentPage === 'Home' ? 'bg-red-600' : 'hover:bg-red-400/60' %> py-2 px-4 rounded-md transition block"
          >Home List</a>
        </li>
       
        <li>
          <a
            href="/home-details"
            class="<%= currentPage === 'home-details' ? 'bg-red-600' : 'hover:bg-red-400/60' %> py-2 px-4 rounded-md transition block"
          >Details</a>
        </li>
        <li>
          <a
            href="/reserve"
            class="<%= currentPage === 'reserve' ? 'bg-red-600' : 'hover:bg-red-400/60' %> py-2 px-4 rounded-md transition block"
          >Reserve</a>
        </li>
        <li>
          <a
            href="/booking"
            class="<%= currentPage === 'booking' ? 'bg-red-600' : 'hover:bg-red-400/60' %> py-2 px-4 rounded-md transition block"
          >Booking</a>
        </li>
        <li>
          <a
            href="/favourite-list"
            class="<%= currentPage === 'favourite-list' ? 'bg-red-600' : 'hover:bg-red-400/60' %> py-2 px-4 rounded-md transition block"
          >Favorites</a>
        </li>

      <% } else { %>

         <li>
          <a
            href="/host/add-home"
            class="<%= currentPage === 'addHome' ? 'bg-red-600' : 'hover:bg-red-400/60' %> py-2 px-4 rounded-md transition block"
          >Add Home</a>
        </li>
        <li>
          <a
            href="/host/host-home-list"
            class="<%= currentPage === 'hostHome' ? 'bg-red-600' : 'hover:bg-red-400/60' %> py-2 px-4 rounded-md transition block"
          >Host Homes</a>
        </li>
      <% }   %>

        <li>
          <form action="/logout" method="POST" class="block">
            <button
              type="submit"
              class="w-full text-left md:text-center bg-red-600 hover:bg-red-700 py-2 px-4 rounded-md transition block"
            >
              Logout
            </button>
          </form>
        </li>
      <% } else { %>
        <li>
          <a
            href="/signup"
            class="<%= currentPage === 'SignUp' ? 'bg-red-600' : 'hover:bg-red-400/60' %> py-2 px-4 rounded-md transition block"
          >Sign Up</a>
        </li>
        <li>
          <a
            href="/login"
            class="<%= currentPage === 'Login' ? 'bg-red-600' : 'hover:bg-red-400/60' %> py-2 px-4 rounded-md transition block"
          >Login</a>
        </li>
      <% } %>
    </ul>
  </nav>

  <!-- Mobile Menu Toggle Script -->
  <script>
    const menuBtn = document.getElementById("menu-btn");
    const menu = document.getElementById("menu");

    menuBtn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  </script>
</header>
